@model FarmHeroes.Data.Models.MonsterModels.Monster[]
@{
    ViewData["Title"] = "Monsters";
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}

<a asp-area="Administration" asp-controller="GameControl" asp-action="Index" class="btn btn-primary text-uppercase">Go Back</a>
<a asp-area="Administration" asp-controller="Monsters" asp-action="Add" class="btn btn-success float-right text-uppercase">Add Monster</a>

<table class="table mt-2">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Level</th>
            <th scope="col">Stats</th>
            <th scope="col">Min Reward Modifier</th>
            <th scope="col">Max Reward Modifier</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var monster in Model)
        {
        <tr>
            <th scope="row">@monster.Name</th>
            <td>@monster.Level</td>
            <td>@monster.StatPercentage%</td>
            <td>@monster.MinimalRewardModifier</td>
            <td>@monster.MaximalRewardModifier</td>
            <td>
                <a asp-area="Administration" asp-controller="Monsters" asp-action="Edit" asp-route-id="@monster.Id" class="btn btn-info text-uppercase">Edit</a>
                <a asp-area="Administration" asp-controller="Monsters" asp-action="Delete" asp-route-id="@monster.Id" class="btn btn-danger text-uppercase">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

