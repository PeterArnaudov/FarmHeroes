@using FarmHeroes.Data.Models.Enums
@model FarmHeroes.Web.ViewModels.HeroModels.HeroCreateInputModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<div class="row mt-2">
    <div class="col-4">
        <img src="~/images/avatars/sheep-male.jpg" alt="sheep" class="img-fluid float-left">
    </div>
    <div class="col-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>@Localizer["Name-Label"]</label>
                <input type="text" class="form-control" placeholder="@User.Identity.Name" disabled>
                <small class="form-text text-muted">@Localizer["Name-Info"]</small>
            </div>
            <label asp-for="Gender">@Localizer["Gender-Label"]</label>
            <select asp-for="Gender" class="form-control form-control-sm">
                <option selected disabled>@Localizer["Gender-Placeholder"]</option>
                <option value="@Gender.Male">@Localizer["Gender-Male"]</option>
                <option value="@Gender.Female">@Localizer["Gender-Female"]</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
            <label asp-for="Fraction">@Localizer["Fraction-Label"]</label>
            <select asp-for="Fraction" class="form-control form-control-sm">
                <option selected disabled>@Localizer["Fraction-Placeholder"]</option>
                <option value="@Fraction.Sheep">@Localizer["Fraction-Sheep"]</option>
                <option value="@Fraction.Pig">@Localizer["Fraction-Pig"]</option>
            </select>
            <span asp-validation-for="Fraction" class="text-danger"></span>
            <button type="submit" class="btn btn-primary btn-block mt-3 text-uppercase">@Localizer["Create-Hero-Button"]</button>
        </form>
    </div>
    <div class="col-4">
        <img src="~/images/avatars/pig-female.jpg" alt="sheep" class="img-fluid float-right">
    </div>
</div>
