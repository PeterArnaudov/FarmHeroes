@using FarmHeroes.Common
@{
    this.ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<div id="carousel" class="carousel slide w-50 mt-5 mr-auto ml-auto" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block carousel-image" src="~/images/battlefield/battlefield.jpg" alt="First slide">
            <div class="carousel-caption position-static d-md-block">
                <h5>Fight</h5>
                <p>Initiate fights or defend yourself against worthy foes.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block carousel-image" src="~/images/village/farm/farm.jpg" alt="First slide">
            <div class="carousel-caption position-static d-md-block">
                <h5>Work</h5>
                <p>Work in order to buy your hero equipment and to train.</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block carousel-image" src="~/images/village/shop/shop.jpg" alt="Third slide">
            <div class="carousel-caption position-static d-md-block">
                <h5>Shop</h5>
                <p>Spend your resources on empowerments and goods.</p>
            </div>
        </div>
        <a class="carousel-control-prev bottom-50" href="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next bottom-50" href="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
