@model FarmHeroes.Web.ViewModels.BattlefieldModels.BattlefieldGetOpponentsViewModel
@{
    ViewData["Title"] = "GetOpponents";
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";
}

    <div class="row">
        @foreach (var opponent in Model.Opponents)
        {
            <div class="col-3 m-auto text-center">
                <h5 class="overflow-hidden">@opponent.Name</h5>
                <img src="@opponent.AvatarUrl" alt="avatar" class="img-fluid mt-2 mb-2">
                <span class="text-left">
                    <p class="m-auto"><img src="~/images/icons/attack-icon.png" class="icon"> @opponent.CharacteristicsAttack.ToString("N0")</p>
                    <p class="m-auto"><img src="~/images/icons/defense-icon.png" class="icon"> @opponent.CharacteristicsDefense.ToString("N0")</p>
                    <p class="m-auto"><img src="~/images/icons/mastery-icon.png" class="icon"> @opponent.CharacteristicsMastery.ToString("N0")</p>
                    <p class="m-auto"><img src="~/images/icons/mass-icon.png" class="icon"> @opponent.CharacteristicsMass.ToString("N0")</p>
                    <p class="m-auto"><img src="~/images/icons/dexterity-icon.png" class="icon"> @opponent.CharacteristicsDexterity.ToString("N0")</p>
                </span>
                <a href="/Battlefield/AttackPlayer/@opponent.Id" class="btn btn-primary mt-2">Attack</a>
            </div>
        }
    </div>